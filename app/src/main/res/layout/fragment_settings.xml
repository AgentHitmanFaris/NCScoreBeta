<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:padding="16dp">

    <!-- Header -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- App Info -->
    <LinearLayout
        android:id="@+id/infoContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NC Score (Beta)"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version 1.1.0"
            android:textColor="#888888"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Settings List -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@+id/infoContainer">

        <!-- Clear Cache -->
        <TextView
            android:id="@+id/btnCache"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clear App Cache"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:padding="16dp"
            android:background="?attr/selectableItemBackground"
            android:drawableEnd="@android:drawable/ic_menu_delete"
            android:drawableTint="#AAAAAA"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#333333"/>

        <!-- About Developer -->
        <TextView
            android:id="@+id/btnAbout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About Developer"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:padding="16dp"
            android:background="?attr/selectableItemBackground"
            android:drawableEnd="@android:drawable/ic_menu_info_details"
            android:drawableTint="#AAAAAA"/>

         <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#333333"/>

        <!-- Report Bug -->
        <TextView
            android:id="@+id/btnReportBug"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Report Bug"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:padding="16dp"
            android:background="?attr/selectableItemBackground"
            android:drawableEnd="@android:drawable/stat_notify_error"
            android:drawableTint="#FFA500"/>

         <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#333333"/>

        <!-- Log Out (Only visible if logged in, logic in Kotlin) -->
        <TextView
            android:id="@+id/tvLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log Out"
            android:textColor="#FF5555"
            android:textSize="16sp"
            android:padding="16dp"
            android:background="?attr/selectableItemBackground"
            android:drawableEnd="@android:drawable/ic_lock_power_off"
            android:drawableTint="#FF5555"/>

         <View
            android:id="@+id/dividerLogout"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#333333"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>